require './lib/config/node_extensions'

grammar Numerics
  rule rational
    ('+' / '-')? [\s]* '('? '-'? '('? [1-9]+ '/' [0-9]+ ')'? <RationalLiteral>
  end

  rule decimal
    ('+' / '-')? [\s]* [0-9]+ '.' [0-9]+ <DecimalLiteral>
  end

  rule integer
    ('+' / '-')? [\s]* [0-9]+ <IntegerLiteral>
  end
end
