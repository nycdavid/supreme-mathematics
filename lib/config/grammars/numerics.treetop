require './lib/supreme_math/numerics'

grammar Numerics
  rule rational
    ('+' / '-')? [\s]* '('? '-'? '('? [1-9]+ '/' [0-9]+ ')'? <RationalLiteral>
    / decimal
  end

  rule decimal
    ('+' / '-')? [\s]* [0-9]+ '.' [0-9]+ <DecimalLiteral>
    / integer
  end

  rule integer
    ('+' / '-')? [\s]* [0-9]+ <IntegerLiteral>
  end
end
