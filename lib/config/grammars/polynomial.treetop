require './lib/config/node_extensions'
require './lib/config/grammars/integer'

grammar Polynomial
  include Numerics

  rule linear_function
    slope variable y_intercept <LinearFunction> / slope variable <LinearFunction>
  end

  rule slope
    integer / rational / decimal
  end

  rule y_intercept
    operator
  end

  rule variable
    [a-z] <Variable>
  end
end
